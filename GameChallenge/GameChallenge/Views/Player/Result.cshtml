@model GameChallenge.Models.Player
@{
    ViewBag.Title = "Winner of the tournament";
}

<div class="container">
    <div class="col s12 m6">
        <div class="card green accent-4" style="margin-top:20px">
            <div class="card-content white-text">
                <div class=" center-align">
                    <span class="card-title">Champion</span>
                    <p>
                        Name:
                        @Html.DisplayFor(model => model.name)

                    </p>
                    <p>
                        Strategy:
                        @Html.DisplayFor(model => model.strategy)
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>